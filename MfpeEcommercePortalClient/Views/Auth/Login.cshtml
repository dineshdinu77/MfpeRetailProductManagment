@model EcommercePortalClient.Models.User

@{ ViewData["Title"] = "Login";
    Layout= "~/Views/Shared/_Layout.cshtml";
    }



<body>
    <div class="container justify-content-center h-100">
        <div class="d-flex1  justify-content-center h-100">
            <div class="user_card">
                <div class="d-flex justify-content-center ">
                    <div class="brand_logo_container">
                        <img src="https://png.pngtree.com/png-vector/20191003/ourmid/pngtree-user-login-or-authenticate-icon-on-gray-background-flat-icon-ve-png-image_1786166.jpg" class="brand_logo" alt="Logo">
                    </div>
                </div>
                <div class="d-flex justify-content-center form_container">


                    <form asp-action="Login">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <label asp-for="Username" class="control-label"></label>
                            <input type="text" asp-for="Username" class="form-control" placeholder="username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <label asp-for="Password" class="control-label"></label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="text-danger">@ViewBag.Info</div>
                        <div class="d-flex justify-content-center mt-3 login_container">
                            <input type="submit" value="Login" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
              


            </div>
        </div>
    </div>
</body>


